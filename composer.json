{
    "name": "coconutcraig/laravel-postmark",
    "type": "library",
    "description": "Laravel package for sending mail via the Postmark API",
    "keywords": [
        "wildbit",
        "postmark",
        "laravel",
        "mail",
        "email"
    ],
    "homepage": "https://github.com/craigpaul/laravel-postmark",
    "license": "MIT",
    "authors": [
        {
            "name": "Craig Paul",
            "email": "craig.paul@coconutcalendar.com",
            "homepage": "https://coconutcalendar.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.1",
        "illuminate/mail": "^7.0 || ^8.0",
        "illuminate/support": "^7.0 || ^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0 || ^6.0",
        "phpunit/phpunit": "^9.4"
    },
    "suggest": {
        "mvdnbrk/postmark-inbound": "Allows you to process Postmark Inbound Webhooks."
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        },
        "laravel": {
            "providers": [
                "CraigPaul\\Mail\\PostmarkServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "CraigPaul\\Mail\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CraigPaul\\Mail\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
